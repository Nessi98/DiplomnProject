                y: 41
              }, {
                x: 25,
                y: 41.5
              }, {
                x: 30,
                y: 42
              }, {
                x: 35,
                y: 41
              }, {
                x: 40,
                y: 42.5
              }, {
                x: 45,
                y: 43
              }, {
                x: 50,
                y: 42.5
              }, {
                x: 55,
                y: 41
              }, {
                x: 60,
                y: 41.5
              }, {
                x: 65,
                y: 40.5
              },{
                x: 70,
                y: 40.5
              }, {
                x: 75,
                y: 40
              }],
              fill: false,
            }]
        },
        options: {
          responsive: true,
            title: {
              display: true,
                text: 'Humidity'
            },
            tooltips: {
              mode: 'index',
                intersect: false,
            },
            hover: {
              mode: 'nearest',
                intersect: true
            },
            scales: {
              xAxes: [{
                display: true,
              }],
                yAxes: [{
                  display: true,
                  scaleLabel: {
                    display: true,
                      labelString: 'Humidity'
                  }
                }]
            }
        }
      };

      window.myLine = new Chart(document.getElementById('TemperatureLineChart').getContext('2d'), configTemperature);
      window.myLine = new Chart(document.getElementById('HumidityLineChart').getContext('2d'), configHumidity);
    }
  </script>

</div>